---
import Tag from './Tag.astro';
interface Props {
	abstract: string;
	date: Date;
	slug: string;
	subtitle?: string;
	tags: string[];
	title: string;
}

const { abstract, date, slug, subtitle, tags, title } = Astro.props;
---

<div class="flex flex-col m-auto ">
	<div class="flex items-baseline gap-10">
		<a href={`/articles/${slug}`}>
			<h3 class=" text-3xl text-yellow-light hover:brightness-75 transition duration-200 ease-out-in " >{title}</h3>
		</a>
		<span>{date.toLocaleDateString()}</span>
	</div>
	<h4 class=" text-gray-light">{subtitle}</h4>
	<p>{abstract}</p>
	<div class=" mt-4">
		{
			tags.map(tag => (
				<Tag tag={tag} />
			))
		}
	</div>
</div>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
