---
import Tag from './Tag.astro';
interface Props {
  abstract: string;
  date: Date;
  slug: string;
  subtitle?: string;
  tags: string[];
  title: string;
}

const { abstract, date, slug, subtitle, tags, title } = Astro.props;
---

<div class='flex flex-col m-auto'>
  <div class='flex items-baseline justify-between'>
    <div class='flex gap-8 items-baseline'>
      <a href={`/articles/${slug}`}>
        <h3
          class='text-3xl text-yellow-light hover:brightness-75 transition duration-200 ease-out-in'
        >
          {title}
        </h3>
      </a>
      <span class='text-gray italic text-md'>{date.toLocaleDateString()}</span>
    </div>

    <div>
      {tags.map((tag) => <Tag tag={tag} />)}
    </div>
  </div>
  <h4 class='text-gray-light'>{subtitle}</h4>
  <p>{abstract}</p>
</div>
