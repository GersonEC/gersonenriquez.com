---
const { title, description, topics, link, linkText } = Astro.props;
---

<div
  class='flex w-full max-w-xl border border-orange-dark rounded-xl shadow-md hover:shadow-xl transition-shadow duration-200 p-6 bg-white'
>
  <div class='flex flex-col w-full gap-4'>
    <h3 class='font-bold text-2xl text-orange-dark mb-2'>
      {title}
    </h3>

    <p class='text-gray-700 text-base leading-relaxed'>
      {description}
    </p>

    {
      topics && topics.length > 0 && (
        <div class='mt-2'>
          <p class='text-sm font-semibold text-gray-600 mb-2'>
            Areas I can help with:
          </p>
          <ul class='list-disc list-inside text-gray-700 text-sm space-y-1'>
            {topics.map((topic: string) => (
              <li>{topic}</li>
            ))}
          </ul>
        </div>
      )
    }

    {
      link && (
        <a
          href={link}
          target={link.startsWith('http') ? '_blank' : undefined}
          rel={link.startsWith('http') ? 'noopener noreferrer' : undefined}
          class='mt-4 inline-block font-semibold text-orange-dark hover:text-orange-600 hover:underline transition duration-200 text-center self-start'
        >
          {linkText || 'Get in touch â†’'}
        </a>
      )
    }
  </div>
</div>
