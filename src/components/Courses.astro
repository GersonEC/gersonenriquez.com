---
import CoursesCard from './CoursesCard.astro';
import MasterPaymentsByBuildingCover from '../assets/master-payments-by-building-cover.png';
---

<section class='max-w-6xl mx-auto py-12 sm:py-24 flex flex-col gap-8 sm:gap-16'>
  <h2 class='text-4xl font-semibold text-center'>My Courses</h2>
  <div>
    <div class='grid grid-cols-1 gap-8 place-items-center'>
      <CoursesCard
        title='Master Payments By Building'
        description='Learn how payments work and integrate Stripe & Paddle into your projects.'
        link='/master-payments-by-building'
        image={MasterPaymentsByBuildingCover}
      />
    </div>
  </div>
</section>
