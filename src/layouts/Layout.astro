---
import { ViewTransitions } from 'astro:transitions';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import '@styles/global.css';

const { frontmatter, title, page } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content={frontmatter?.description
        ? frontmatter.description
        : 'Gerson Enriquez blog'}
    />
    <meta name='viewport' content='width=device-width' />
    <meta property='og:image' content={`/public/gerson.png`} />
    <link rel='icon' type='image/svg+xml' href='/gerson-circle.png' />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <link
      rel='alternate'
      type='application/rss+xml'
      title='My cool blog'
      href='/rss.xml'
    />
    <ViewTransitions />
  </head>
  <body class='bg-dark'>
    <header
      class='text-white sticky top-0 z-40 w-full backdrop-blur transition-colors mb-2'
    >
      <Header />
    </header>
    <main
      class=`p-2 ${page === "projects" || page === "booknotes" ? 'w-5/6' : 'w-full md:w-3/5 lg:w-3/5 xl:w-3/6 2xl:w-2/4'} m-auto`
    >
      <slot />
    </main>
    <footer class='flex justify-center items-end'>
      <Footer />
    </footer>
  </body>
</html>
