---
import { ViewTransitions } from 'astro:transitions';

const { frontmatter, title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name='description' content={frontmatter?.description ? frontmatter.description : 'Gerson Enriquez blog'} />
		<meta name="viewport" content="width=device-width" />
		<meta
  			property="og:image"
  			content={`/public/gerson.png`}
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link
			rel="alternate"
			type="application/rss+xml"
			title="My cool blog"
			href="/rss.xml"
		/>
		<ViewTransitions />
	</head>
	<body class="p-5">
		{
			Astro.url.pathname !== '/' && (
			  <p class='py-4'>
				<a class='underline' href={'/'}>
				  ◀︎ Back to the homepage
				</a>
			  </p>
			)
		  }
		<h1>{frontmatter?.title && <h1>{frontmatter.title}</h1>}</h1>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-size: 1.5rem;
		font-weight: bold;
		color: gray;
	}
	p, li {
		color: white;
	}
	a {
		color: burlywood;
	}
	span {
		color: green
	}
</style>
