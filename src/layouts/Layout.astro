---
import { ViewTransitions } from 'astro:transitions';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';

const { frontmatter, title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name='description' content={frontmatter?.description ? frontmatter.description : 'Gerson Enriquez blog'} />
		<meta name="viewport" content="width=device-width" />
		<meta
  			property="og:image"
  			content={`/public/gerson.png`}
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link
			rel="alternate"
			type="application/rss+xml"
			title="My cool blog"
			href="/rss.xml"
		/>
		<ViewTransitions />
	</head>
	<body class="p-5">
		{
			Astro.url.pathname !== '/' && (
			  <p class='py-4'>
				<a class='underline' href={'/'}>
				  ◀︎ Back to the homepage
				</a>
			  </p>
			)
		}
		<h1>{frontmatter?.title && <h1>{frontmatter.title}</h1>}</h1>
		<ul>
			<Header />
		</ul>
		<slot />
		<Footer />
	</body>
</html>
